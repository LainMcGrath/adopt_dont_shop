
<% @pets %>

<h2>Pets</h2>
<% @pets.each do |pet| %>
  <img src=<%= pet.image %>>
  <h3>Name: <%= pet.name %></h3>
  <p>Age: <%= pet.approximate_age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Description: <%= pet.description %></p>
    <% if pet.adoptable %>
      Status: Adoptable
    <% else %>
      Status: Not Adoptable
    <% end %>
  <p>Current shelter: <%= link_to "#{pet.shelter&.name}", "/shelters/#{pet.shelter_id}" %></p>
  <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></p>
  <p><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></p>
<% end %>

<% if @shelter %>
  <h3><%= link_to 'Add New Adoptable Pet', "/shelters/#{@shelter.id}/pets/new" %></h3>
<% end %>
