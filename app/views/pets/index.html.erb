<% @pets %>

<h1>Pets</h1>
<% @pets.each do |pet| %>
  <img src=<%= pet.image %>>
  <h3>Name: <%= pet.name %></h3>
  <p>Age: <%= pet.approximate_age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Description: <%= pet.description %></p>
    <% if pet.adoptable %>
      Status: Adoptable
    <% else %>
      Status: Not Adoptable
    <% end %>
  <p>Current shelter: <%= pet.shelter&.name %></p>
<% end %>
